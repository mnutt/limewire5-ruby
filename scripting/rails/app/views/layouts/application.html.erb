<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
"http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <title>LimeWire Remote</title>
    <%= javascript_include_tag 'jquery', 'jquery-periodic' -%>
    <%= javascript_include_tag @javascript_includes if @javascript_includes -%>
    <%= stylesheet_link_tag 'reset', 'application' -%>
    <style type="text/css">
      #total_progress,
      #file_progress {
        height: 5px;
        width: 100%;
        background-color: #EEE;
        border: 1px solid #EEE;
      }
      #total_progress_indicator,
      #file_progress_indicator {
        height: 5px;
        width: 0%;
        background-color: #8CE;
      }
    </style>
  </head>
  <body>
    <%= yield -%>
  </body>
</html>
